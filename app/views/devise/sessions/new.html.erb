  <body style="background-color: #00203FFF;">

  <%= render "shared/notSignedInNavbar" %>

    <section class="container mx-auto" style=" padding: 110px 200px 0; ">
      <div class="row" style=" padding: 50px 100px; border-radius: 5px;background-color: white;">
       <div class="col">
        <h3 style="letter-spacing: 1px;" class="text-center">Log in to Bugzilla</h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :id => "signinform" } ) do |f|  %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %>
          <br />
          <%=f.email_field :email, :class => 'form-control input-lg'%>
        </div>

        <div class="form-group">
          <%= f.label :password%><br />
          <%= f.password_field :password, :autocomplete => "current-password", :class => 'form-control input-lg'%>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% end %>

        <div class="pt-1 mb-4">
          <%= f.submit "Log in" , class: 'btn btn-info btn-lg btn-block'%>
        </div>
        <br/>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </section>
  </body>
