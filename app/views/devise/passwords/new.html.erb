<body style="background-color: #00203FFF;">

  <nav class="navbar navbar-light " style="background-color: #00203FFF; border-radius: 0;  padding: 20px 50px; box-shadow: rgba(0, 0, 0, 0.5) 0px 1px 20px">
    <span class="navbar-brand" style=" font-size:20px;color: white;">BUGZILLA</span>
  </nav>

  <section class="container mx-auto" style=" padding: 150px 200px; ">
    <div class="row" style=" padding: 50px 100px; border-radius: 5px;background-color: white;">
     <div class="col">
      <h3 style="letter-spacing: 1px;" class="text-center">Forgot your password?</h3>


      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%=f.email_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' , :class => 'form-control input-lg'%>

      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions" , class: 'btn btn-info btn-lg btn-block'%>
      </div>
      <br/>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</section>
</body>
