  <body style="background-color: #00203FFF;">

  <%= render "shared/notSignedInNavbar" %>

    <section class="container mx-auto" style=" padding: 10px 200px 30px; ">
      <div class="row" style=" padding: 50px 100px; border-radius: 5px;background-color: white;">
        <div class="col">
          <h3 style="letter-spacing: 1px;" class="text-center">Edit your account</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :Name %><br />
    <%= f.text_field :username, :autofocus => true , :class => 'form-control input-lg'%>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%=f.email_field :email , :class => 'form-control input-lg'%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, :autocomplete => "new-password" , :class => 'form-control input-lg'%>
    <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, :autocomplete => "new-password" , :class => 'form-control input-lg'%>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, :required => true, :autocomplete => "current-password" , :class => 'form-control input-lg'%>
  </div>

  <div class="actions">
    <%= f.submit "Update" , class: 'btn btn-success btn-lg btn-block'%>
  </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger btn-lg btn-block', data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

  </div>
  </div>
  </section>
  </body>
