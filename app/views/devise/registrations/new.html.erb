  <body style="background-color: #00203FFF;">

  <%= render "shared/notSignedInNavbar" %>

    <section class="container mx-auto" style=" padding: 10px 200px 0; ">
      <div class="row" style=" padding: 50px 100px; border-radius: 5px;background-color: white;">
        <div class="col">
          <h3 style="letter-spacing: 1px;" class="text-center">Sign Up to Bugzilla</h3>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :username , :class => 'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
          <%=f.email_field :email , :class => 'form-control input-lg'%>
          </div>

          <div class="form-group">
            <%= f.label :user_type %><br />
            <%= f.select(:user_type, ['Manager', 'Developer', 'QA'], {}, { class: "form-control input-lg" })%>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, :autocomplete => "new-password",  :class => 'form-control input-lg'%>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, :class => 'form-control input-lg'%>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" , class: 'btn btn-info btn-lg btn-block'%>
          </div>
          <br/>
          <% end %>

          <%= render "devise/shared/links" %>


        </div>
      </div>

    </section>
  </body>
